<div class="justify-content-center">
<section class="top-m2"style="width:50%; height:500px;overflow-x:hidden; border:solid black 2px; border-radius: 25px; padding:25px 25px 25px 25px;">
<%=form_for @teachers do |t| %>
    <div class="form-group">
    <%= t.label :first_name %>
    <%= t.text_field :first_name, label: "First Name:", class: "form-control" %>
    </div>
    <div class="form-group">
    <%= t.label :last_name %>
    <%= t.text_field :last_name, class: "form-control" %>
    </div>
    <div class="form-group">
   <%= t.label :salary %>
    <%= t.text_field :salary, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= t.label :age %>
    <%= t.select :age, (21..150)%>
    </div>
    <div class="form-group">
    <%= t.label :education %>
    <%= t.select :education,["High-School","College","Masters","PhD"] %>
    </div>
    <%= t.submit "Create Teacher" %>

<% end %>
</div>
</section>