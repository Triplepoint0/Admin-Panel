
<div class="justify-content-center">
<section class="top-m2"style="width:50%; height:500px;overflow-x:hidden; border:solid black 2px; border-radius: 25px; padding:25px 25px 25px 25px;">
<%=form_for @cohort do |f| %>
  <div class="form-group">
  <%= f.label :name %>
   <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :start_date %>
<%= f.date_field :start_date, class: "form-control" %>
  </div>
    <div class="form-group">
    <%= f.label :end_date %>
    <%= f.date_field :end_date, class: "form-control" %>
    </div>
        <div class="form-group">
    <%= f.label :course_id %>
    <%= f.collection_select(:course_id, Course.all, :id, :name) %>
    <%= f.submit "Update Cohort", class: "btn btn-primary btn-sm"%>
    </div>

<% end %>





<%=form_for @teacher_cohort do |f| %>
  <div class="form-group">
  <%= f.label :teacher_id %>
  <%= f.collection_select(:teacher_id, Teacher.all, :id, :teacher_full_name) %>
  <%= f.submit "Add Teacher", class: "btn btn-primary btn-sm" %>
  </div>
  <div class="form-group">
  <%= f.hidden_field(:cohort_id, value: "#{@cohort.id}") %>
  </div>


<% end %>







<%=form_for @student_cohort do |f| %>
  <div class="form-group">
  <%= f.label :student_id %>
  <%= f.collection_select(:student_id, Student.all, :id, :student_full_name) %>
  <%= f.submit "Add Student", class:"btn btn-primary btn-sm" %>
  </div>
  <div class="form-group">
  <%= f.hidden_field(:cohort_id, value: "#{@cohort.id}") %>
  </div>
</section>
</div>
<% end %>




